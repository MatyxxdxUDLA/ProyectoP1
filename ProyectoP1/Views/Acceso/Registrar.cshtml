@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="~/css/login.css" rel="stylesheet" />
    <title>Login | Patoalarmas</title>
</head>

<body>

    <div class="container" id="container">
        <div class="form-container sign-up">
            <form action="@Url.Action("Registrar","Acceso")" method="post">
                <h1>Crear una cuenta</h1>
                <span>Ingresa tus credenciales</span>
                <input type="text" name="Correo" class="form-control input_user" value="" placeholder="Email">
                <input type="password" name="Clave" class="form-control input_user" value="" placeholder="Password">
                <input type="password" name="ConfirmarClave" class="form-control input_pass" value="" placeholder="Confirm Password">
                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                }
                <button>Registrarse</button>
            </form>
        </div>
        <div class="form-container sign-in">
            <form action="@Url.Action("Login","Acceso")" method="post">
                <h1>Iniciar Sesión</h1>
                <span>Ingresa tus credenciales</span>
                <input type="email" name="Correo" class="form-control input_user" value="" placeholder="Email">
                <input type="password" name="Clave" class="form-control input_pass" value="" placeholder="Password">
                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                }
                <button>Ingresar</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Bienvenido de nuevo!</h1>
                    <p>Ingresa tus datos personales para ingresar al sistema</p>
                    <button class="hidden" id="login">Ingresar</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Hola, Amigo!</h1>
                    <p>Registrate con tus datos personales para usar el sistema</p>
                    <button class="hidden" id="register">Registrarse</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/script.js"></script>
</body>

</html>